<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tcc.tcc.activity.EditTextActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/informaces_do_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView"
        android:layout_weight="0.03"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:text="Nome: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:id="@+id/txtViewFileName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewNumberPages"
        android:layout_alignBaseline="@+id/numberPages"
        android:layout_alignBottom="@+id/numberPages"
        android:layout_toEndOf="@+id/numberPages" />

    <Button
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/btnEditText"
        android:layout_alignBaseline="@+id/btn_converter"
        android:layout_alignBottom="@+id/btn_converter"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewSize"
        android:layout_alignBaseline="@+id/size"
        android:layout_alignBottom="@+id/size"
        android:layout_toEndOf="@+id/size" />

    <TextView
        android:text="Número de Páginas: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPages"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tamanho do Arquivo: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txtViewNumberPages"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tipo de Livro: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/extension"
        android:layout_alignBaseline="@+id/txtViewExtension"
        android:layout_alignBottom="@+id/txtViewExtension"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewExtension"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtViewSize"
        android:layout_toEndOf="@+id/extension" />

    <Button
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="@string/converter"
        android:id="@+id/btn_converter"
        android:layout_below="@+id/txtViewExtension"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="124dp" />

</RelativeLayout>
